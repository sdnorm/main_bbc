<div class="top-section">
  <% if flash[:notice] %>
    <div class="large-6 small-12 large-centered small-centered text-center">
      <p class="notice"><%= notice %></p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="large-6 small-12 large-centered small-centered text-center">
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>
  <div class="row">
    <div class="large-12 columns text-center">
      <h2 class="main-title">Taco Consulting</h2>
    </div>
  </div>
  <div class="row">
    <div class="large-4 small-10 small-centered">
      <p class="text-center email-text">
        Enter your email if you interested in learning how we can help you and make life just a little bit easier for you and your business.
      </p>
      <div class="email-form">
        <%= form_tag(email_submission_path, method: "get") do %>
          <div class="input-group">
            <%= email_field_tag 'email', nil, placeholder: "Email Address", class: "input-group-field" %>
            <div class="input-group-button">
              <%= submit_tag "Submit", class: "button"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="info">
  <%= render 'info' %>
</div>

<div id="about">
  <%= render 'about' %>
</div>
