<div class="top-section">
  <%= render 'layouts/flash' %>
  <div class="row">
    <div class="large-12 columns text-center">
      <h2 class="main-title">Golden Taco</h2>
      <h4 class="secondary-title">Consulting</h4>
    </div>
  </div>
  <div class="row">
    <div class="large-4 small-10 small-centered">
      <p class="text-center email-text">
        Interested in making life just a little bit easier?
        <br>
        Enter your email to find out how.
      </p>
      <div class="email-form">
        <%= form_tag(email_submission_path, method: "get") do %>
          <div class="input-group">
            <%= email_field_tag 'email', nil, placeholder: "Email Address", class: "input-group-field" %>
            <div class="input-group-button">
              <%= submit_tag "Submit", class: "button"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="info">
  <%= render 'info' %>
</div>

<div id="about">
  <%= render 'about' %>
</div>
